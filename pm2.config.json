{
  "apps": [
    {
      "name": "pm2-logs-viewer",
      "script": "server.js",
      "cwd": "/home/abby/pm2-logs",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3002
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3002
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "~/.pm2/logs/pm2-logs-viewer-error.log",
      "out_file": "~/.pm2/logs/pm2-logs-viewer-out.log",
      "log_file": "~/.pm2/logs/pm2-logs-viewer-combined.log",
      "time": true,
      "autorestart": true,
      "restart_delay": 1000,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}
